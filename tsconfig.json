{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src", "../common"],
  "typeRoots": [ "./types", "./node_modules/@types"],
  "exclude": ["node_modules", "types", "**/*.spec.ts"]
}
